@model Paginate<CategoryProductVM>
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <h2 class="text-center">Categories</h2>
    <a asp-controller="Category" asp-action="Create" class="btn btn-success">
        <i class="ti-plus"></i>
    </a>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>

                    <th>Category Name</th>
                    <th>Created Date</th>
                    <th>Product count</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Datas)
                {
                    <tr class="category-data" style="background-color:#bbb">

                        <td>@item.CategoryName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ProductCount</td>
                        <td>

                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary text-white small">
                                <i class="ti-info"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white small">
                                <i class="ti-marker-alt"></i>
                            </a>
                            <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">

                                <button type="submit" class="btn btn-danger text-white small">
                                    <i class="ti-trash"></i>
                                </button>
                            </form>
                            <a data-id="@item.Id" class="btn btn-secondary text-white small add-archive">
                                <i class="ti-archive"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


        <div class="pagination-area d-flex justify-content-center mt-3">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPrevious ? "" :"disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <li class="page-item @(Model.CurrentPage==i ? "disabled" : "")"><a class="page-link @(Model.CurrentPage == i ? "paginate-active" : "")" asp-action="Index" asp-route-page="@i">@i</a></li>
                    }
                    <li class="page-item @(Model.HasNext ? "" :"disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section js{
    <script src="~/js/archive.js"></script>
}

