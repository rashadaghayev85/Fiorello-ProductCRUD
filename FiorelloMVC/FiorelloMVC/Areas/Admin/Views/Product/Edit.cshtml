
@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="preview col-md-6">

    <div class="preview-pic tab-content">
   


    </div>
    <ul class="preview-thumbnail nav nav-tabs mx-5">
        @foreach (var item in Model.Images)
        {
            <form class="d-inline" method="post" asp-action="isMain" asp-route-id="@item.Id">
                <button class="btn btn-warning text-white btn-sm" style="@(item.IsMain?"display:none; ":"")"><i class="ti-marker"></i></button>
            </form>
            <form class="d-inline" method="post" asp-action="Imagedelete" asp-route-id="@item.Id">
                <button type="submit" class="btn btn-danger text-white btn-sm"><i class="ti-trash"></i></button>
            </form>
            <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="~/img/@item.Image" style="@(item.IsMain?"border: 2px solid #acaafd ":"")" /></a></li>
        }
    </ul>

</div>

<div class="container mt-5">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label for="category">Name</label>
            <input asp-for="Name" class="form-control form-bg-light">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="category">Description</label>
            <input asp-for="Description" class="form-control form-bg-light">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="category">Price</label>
            <input asp-for="Price" type="number" step="any" class="form-control form-bg-light">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
        </div>

        <div class="form-group">
            <label for="category">Images</label>
            @* inputun attributuuna accept="image/*"(* yerine png falanda yazmaq olur) versek yalniz image qebul edecek *@
            @* multiple atributu ile bir nece sekil secmek olur *@
            <input class="form-control form-bg-light" multiple asp-for="NewImages">
            <span asp-validation-for="NewImages" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-light mr-2">Cancel</a>
    </form>
</div>

